<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titlebanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campus Discovery"
        android:textAlignment="center"
        android:textSize="45sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30sp"
        />

    <TextView
        android:id="@+id/undertitle"
        app:layout_constraintTop_toBottomOf="@+id/titlebanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by MIRAJ"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/undertitle"
        android:layout_marginTop="75sp"
        android:layout_marginHorizontal="50sp"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/white"
        />
    

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="25sp"
        android:layout_marginHorizontal="50sp"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="@color/white"
        />
    
    <Button
        android:id="@+id/logInButton"
        android:layout_width="250dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="Log In"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:backgroundTint="#49A5AD"
        />

    <TextView
        android:id="@+id/newAcct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logInButton"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:text="New to Campus Discovery?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/registerLink"
        />

    <TextView
        android:id="@+id/registerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logInButton"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:text="Register"
        app:layout_constraintLeft_toRightOf="@id/newAcct"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>