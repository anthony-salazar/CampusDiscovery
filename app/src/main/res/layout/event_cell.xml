<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_2"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:background="@color/tech_blue"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <LinearLayout
            android:id="@+id/LinearLayoutcell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tech_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="@string/title_place_holder"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@string/event_date_placeholder"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@string/event_location_placeholder"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/eventDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@string/event_description_placeholder"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/eventHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <Button
                android:id="@+id/editEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="120dp"
                android:text="Edit Event"
                android:textColor="@color/white"
                android:backgroundTint="@color/olympic_teal"
                />

            <Button
                android:id="@+id/removeEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="120dp"
                android:text="Remove Event"
                android:textColor="@color/white"
                android:backgroundTint="@color/olympic_teal"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>