<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".organizer">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        app:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="@drawable/gradient_2"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/orgHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="times"
                android:text="Create Event"
                android:gravity="end"
                android:textColor="@color/tech_blue"
                android:textSize="23sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/returnToDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/tech_blue"
        android:text="Return"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/orgHeader"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="638dp"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="@drawable/gradient_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Event Title"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/tech_bright_lime"
            android:layout_margin="20sp"
            android:layout_marginTop="40sp">
        </EditText>

        <EditText
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Event Description"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/tech_bright_lime"
            android:layout_margin="10sp">
        </EditText>

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Location"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/tech_bright_lime"
            android:layout_margin="20sp">
        </EditText>

        <EditText
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Time"
            android:gravity="center"
            android:textColorHint="@color/white"
            android:textColor="@color/tech_bright_lime"
            android:layout_margin="20sp">
        </EditText>

        <Button
            android:id="@+id/createBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="150dp"
            android:text="Create"
            android:backgroundTint="@color/olympic_teal">

        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>